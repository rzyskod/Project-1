using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Diagnostics;

namespace Projekt1
{
    class Program
    {

        private static int SimplesearchOperation(int[] tablica, int maxvalue)
        {
            for (int i = 0; i < tablica.Length; i++)
            {
                if (tablica[i] == maxvalue) return i;

            }
            return -1;
        }

        private static int simplesearch(int[] tablica, int maxvalue)
        {
            count = 0;
            for (int i = 0; i < tablica.Length; i++)
            {
                count++;
                if (tablica[i] == maxvalue) return i;

            }
            return -1;
        }

        private static int count;
        static void Main(string[] args)
        {
            int maxvalue=1001;

            int result;

            
            List<int> liczby = new List<int>();

            Random r = new Random();

            Console.WriteLine("size;maxvalue;result;time;oper_count");

            for (int x = 7000; x < (int)Math.Pow(2, 28); x += 6666)
            {
                int[] tablica = new int[x];


                for (int i = 0; i < tablica.Length; i++)
                {
                    tablica[i] = r.Next(1, 1000);
                }

                
                
                long start = Stopwatch.GetTimestamp();
                result = simplesearch(tablica, maxvalue);
                long stop = Stopwatch.GetTimestamp();
                result = SimplesearchOperation(tablica, maxvalue);
                Console.WriteLine(x+";"+maxvalue+";"+result+";"+(stop-start)+";"+count);

            }
            Console.WriteLine(liczby);
            Console.ReadKey();




        }

        

        
    }
}    
            
           
